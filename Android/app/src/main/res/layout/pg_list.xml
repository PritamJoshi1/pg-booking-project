<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/pgListCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/abcd"
                android:layout_marginBottom="5dp"
                android:id="@+id/pgImage"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG Name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:id="@+id/txtPgName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG Address"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:id="@+id/txtPgAddress"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG Phone"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:id="@+id/txtPgPhone"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>